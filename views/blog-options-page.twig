{% set ADI_I18N = constant('ADI_I18N') %}
<!-- get nonce -->
<script type="application/javascript">
    document['adi2'] = document['adi2'] || {};
    document['adi2']['security'] = '{{ nonce }}';
</script>
<div ng-app="adi2-module">
    <h1>{{ 'Active Directory Integration Blog Configuration'|__(ADI_I18N) }}</h1>

    <div ng-controller="BlogController">
        <form class="form adi-form" name="form">
            <div class="block-ui" ng-hide="runningRequests == 0"></div>

            {% import "option/page.twig" as page %}
            {{ page.create('noprefix') }}
        </form>
    </div>
</div>
<!-- Including jQuery Dialog dependency -->
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
