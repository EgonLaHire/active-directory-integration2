<h1>{{ i18n.title }}</h1>

<div>
    {{ i18n.descriptionLine1|raw }}<br>
    {{ i18n.descriptionLine2|raw }}<br>
    <code>curl --data "next_ad_int-task=sync-to-wordpress&auth-code={{ authCode }}" {{ blogUrl }}/wp-admin/admin.php</code></br>
    <code>wget --post-data "next_ad_int-task=sync-to-wordpress&auth-code={{ authCode }}" {{ blogUrl }}/wp-admin/admin.php</code>
</div>

<br>

<form method="post">
    <input type="hidden" name="security" value="{{ nonce }}"/>
    <button type="submit" name="syncToWordpress" class="button button-primary">
        {{ status is defined ? i18n.repeatAction|raw : i18n.startAction|raw }}
    </button>

    {% if status is defined %}
        {% set logs = log  %}
        <h2>Log</h2>
        <table class="table table-bordered">
            <tr>
                <th class="col-md-1" style="text-align: center">Log Level</th>
                <th style="text-align: center">Log Message</th>
            </tr>
            {% for logLine in logs %}
                {% if logLine.logLevel == '[DEBUG]' or logLine.logLevel == '[WARN ]'%}
                    <tr class="danger">
                        <td style="text-align: center">{{logLine.logLevel}}</td>
                        <td>{{logLine.logMessage}}</td>
                    </tr>
                {% else %}
                    <tr class="info">
                        <td style="text-align: center">{{logLine.logLevel}}</td>
                        <td>{{logLine.logMessage}}</td>
                    </tr>
                {% endif %}
                </tr>
            {% endfor %}
            {% if status == true %}
                <tr class="success">
                    <td style="text-align: center">[STATUS]</td>
                    <td>
                        <p>
                            {{ message }}
                        </p>
                    </td>
                </tr>
            {% else %}
                <tr class="danger">
                    <td style="text-align: center">[STATUS]</td>
                    <td>
                        <p>{{ message }}</p>
                    </td>
                </tr>
            {% endif %}

        </table>
    {% endif %}

</form>
